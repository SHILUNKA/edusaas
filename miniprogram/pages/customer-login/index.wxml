<view class="login-container">
  <!-- 欢迎信息 -->
  <view class="welcome-section">
    <view class="logo-placeholder">🎓</view>
    <view class="welcome-title">欢迎来到教育SaaS</view>
    <view class="welcome-desc" wx:if="{{entryParams}}">
      <text>来自: {{entryParams.channel || '官方'}}渠道</text>
    </view>
    <view class="welcome-desc" wx:else>
      <text>家长学员专属小程序</text>
    </view>
  </view>

  <!-- 登录区域 -->
  <view class="login-section">
    <!-- 🧪 测试登录按钮（开发模式） -->
    <button 
      class="login-btn test-btn"
      bindtap="onTestLogin"
      loading="{{loading}}"
      disabled="{{loading}}"
      wx:if="{{showTestBtn}}"
    >
      <text class="btn-icon">🧪</text>
      <text class="btn-text">测试登录（开发模式）</text>
    </button>

    <!-- 微信一键登录按钮 -->
    <button 
      class="login-btn wechat-btn"
      bindtap="onWechatLogin"
      loading="{{loading}}"
      disabled="{{loading}}"
    >
      <text class="btn-icon">📱</text>
      <text class="btn-text">微信一键登录</text>
    </button>

    <!-- 调试工具 -->
    <view class="debug-tools" wx:if="{{showTestBtn}}">
      <button class="debug-btn" size="mini" bindtap="onViewParams">查看参数</button>
      <button class="debug-btn" size="mini" bindtap="onClearCache">清除缓存</button>
    </view>
  </view>

  <!-- 用户协议 -->
  <view class="agreement">
    <text>登录即代表同意</text>
    <text class="link">《用户协议》</text>
    <text>和</text>
    <text class="link">《隐私政策》</text>
  </view>

  <!-- 装饰图案 -->
  <view class="decoration">
    <view class="circle circle-1"></view>
    <view class="circle circle-2"></view>
    <view class="circle circle-3"></view>
  </view>
</view>
