/* pages/customer-login/index.wxss */
.login-container {
  min-height: 100vh;
  background: linear-gradient(180deg, #667eea 0%, #764ba2 100%);
  padding: 100rpx 60rpx;
  position: relative;
  overflow: hidden;
}

/* 欢迎区域 */
.welcome-section {
  text-align: center;
  color: white;
  margin-bottom: 150rpx;
}

.logo-placeholder {
  width: 160rpx;
  height: 160rpx;
  line-height: 160rpx;
  text-align: center;
  font-size: 80rpx;
  border-radius: 32rpx;
  margin: 0 auto 40rpx;
  background: white;
}

.welcome-title {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.welcome-desc {
  font-size: 28rpx;
  opacity: 0.9;
}

/* 登录区域 */
.login-section {
  margin-bottom: 60rpx;
}

.login-btn {
  width: 100%;
  height: 100rpx;
  background: white;
  border-radius: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.15);
  border: none;
  transition: transform 0.2s;
}

.login-btn:active {
  transform: scale(0.98);
}

.login-btn.wechat-btn {
  background: linear-gradient(135deg, #07C160 0%, #05A650 100%);
  color: white;
}

.login-btn.test-btn {
  background: linear-gradient(135deg, #FF6B6B 0%, #FF5252 100%);
  color: white;
}

.login-btn.phone-btn {
  background: white;
  color: #333;
}

.debug-tools {
  display: flex;
  justify-content: center;
  gap: 20rpx;
  margin-top: 20rpx;
}

.debug-btn {
  background: rgba(255, 255, 255, 0.2);
  color: white;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
}

.btn-icon {
  font-size: 40rpx;
  margin-right: 16rpx;
}

.btn-text {
  font-size: 32rpx;
  font-weight: 500;
}

/* 用户协议 */
.agreement {
  text-align: center;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

.agreement .link {
  color: white;
  text-decoration: underline;
}

/* 装饰圆圈 */
.decoration {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  pointer-events: none;
  z-index: 0;
}

.circle {
  position: absolute;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.1);
}

.circle-1 {
  width: 300rpx;
  height: 300rpx;
  top: -100rpx;
  right: -50rpx;
}

.circle-2 {
  width: 200rpx;
  height: 200rpx;
  bottom: 200rpx;
  left: -80rpx;
}

.circle-3 {
  width: 150rpx;
  height: 150rpx;
  top: 40%;
  right: -30rpx;
}

/* 保持内容在装饰之上 */
.welcome-section,
.login-section,
.agreement {
  position: relative;
  z-index: 1;
}
