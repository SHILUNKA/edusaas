/* pages/launch/index.wxss */
.launch-container {
  min-height: 100vh;
  background: linear-gradient(180deg, #667eea 0%, #764ba2 100%);
  display: flex;
  align-items: center;
  justify-content: center;
}

.logo-container {
  text-align: center;
  animation: fadeIn 0.5s ease-in;
}

.logo-text {
  font-size: 120rpx;
  display: block;
  margin-bottom: 30rpx;
  animation: bounce 1s infinite;
}

.app-name {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 20rpx;
}

.loading-text {
  display: block;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  animation: pulse 1.5s infinite;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(-20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes bounce {
  0%, 100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-10rpx);
  }
}

@keyframes pulse {
  0%, 100% {
    opacity: 1;
  }
  50% {
    opacity: 0.5;
  }
}