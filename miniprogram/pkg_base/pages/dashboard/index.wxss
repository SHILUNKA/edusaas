/* 基地老板决策看板样式 */

.dashboard-container {
  min-height: 100vh;
  background: linear-gradient(180deg, #f5f7fa 0%, #c3cfe2 100%);
  padding: 20rpx 20rpx 40rpx;
  /* 调试代码，把z-index提高 */
  position: relative;
  z-index: 1;
}

/* 头部 */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.base-info {
  display: flex;
  flex-direction: column;
}

.base-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #2c3e50;
}

.update-time {
  font-size: 24rpx;
  color: #7f8c8d;
  margin-top: 8rpx;
}

.refresh-btn {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: white;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}

.refresh-btn .icon {
  font-size: 40rpx;
  color: #3498db;
}

/* 警报横幅 */
.alert-banner {
  display: flex;
  align-items: center;
  padding: 20rpx;
  margin-bottom: 20rpx;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
}

.alert-banner.critical {
  background: linear-gradient(135deg, #ff6b6b 0%, #ee5a6f 100%);
  color: white;
}

.alert-banner.warning {
  background: linear-gradient(135deg, #f39c12 0%, #f1c40f 100%);
  color: #2c3e50;
}

.alert-icon {
  font-size: 48rpx;
  margin-right: 20rpx;
}

.alert-content {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.alert-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.alert-desc {
  font-size: 26rpx;
  opacity: 0.9;
}

/* 指标卡片 */
.metric-card {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.08);
}

.metric-card.priority {
  border-left: 8rpx solid #e74c3c;
}

.metric-card.half {
  width: calc(50% - 10rpx);
}

.metric-row-group {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

/* 卡片头部 */
.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #ecf0f1;
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #2c3e50;
}

.card-subtitle {
  font-size: 24rpx;
  color: #95a5a6;
}

.status-badge {
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: bold;
}

.status-badge.status-healthy {
  background: #d4edda;
  color: #27ae60;
}

.status-badge.status-warning {
  background: #fff3cd;
  color: #f39c12;
}

.status-badge.status-critical,
.status-badge.status-poor {
  background: #f8d7da;
  color: #e74c3c;
}

.status-badge.status-ahead {
  background: #d4edda;
  color: #27ae60;
}

.status-badge.status-on_track {
  background: #d1ecf1;
  color: #3498db;
}

.status-badge.status-behind {
  background: #f8d7da;
  color: #e74c3c;
}

/* 卡片内容 */
.card-body {
  display: flex;
  flex-direction: column;
}

.metric-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
}

.metric-row.mini {
  padding: 8rpx 0;
}

.metric-row .label {
  font-size: 28rpx;
  color: #7f8c8d;
}

.metric-row .label.highlight {
  color: #e74c3c;
  font-weight: bold;
}

.metric-row .value {
  font-size: 32rpx;
  font-weight: bold;
  color: #2c3e50;
}

.metric-row .value.big {
  font-size: 40rpx;
  color: #3498db;
}

.metric-row .value.highlight {
  color: #e74c3c;
}

.metric-row .value.danger {
  color: #e74c3c;
}

.metric-row .value.success {
  color: #27ae60;
}

/* 大数字显示 */
.big-number {
  font-size: 64rpx;
  font-weight: bold;
  color: #2c3e50;
  text-align: center;
  margin: 20rpx 0;
}

.small-text {
  font-size: 24rpx;
  color: #95a5a6;
  text-align: center;
  margin-bottom: 16rpx;
}

/* ToC/ToB分栏 */
.split-bar {
  display: flex;
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 2rpx solid #ecf0f1;
}

.split-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.split-label {
  font-size: 24rpx;
  color: #95a5a6;
  margin-bottom: 8rpx;
}

.split-value {
  font-size: 32rpx;
  font-weight: bold;
  color: #2c3e50;
}

.split-divider {
  width: 2rpx;
  background: #ecf0f1;
  margin: 0 20rpx;
}

/* 进度条 */
.progress-info {
  display: flex;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.progress-label,
.progress-value {
  font-size: 28rpx;
  color: #7f8c8d;
}

.progress-bar-container {
  height: 16rpx;
  background: #ecf0f1;
  border-radius: 8rpx;
  overflow: hidden;
  margin-bottom: 12rpx;
}

.progress-bar {
  height: 100%;
  background: linear-gradient(90deg, #3498db 0%, #2ecc71 100%);
  transition: width 0.3s ease;
}

.progress-percent {
  font-size: 40rpx;
  font-weight: bold;
  color: #3498db;
  text-align: center;
  display: block;
  margin-top: 16rpx;
}

/* 预警列表 */
.alert-card {
  background: linear-gradient(135deg, #fff5f5 0%, #ffe6e6 100%);
  border-left: 8rpx solid #e74c3c;
}

.alert-list {
  display: flex;
  flex-direction: column;
}

.alert-item {
  display: flex;
  align-items: center;
  padding: 12rpx 0;
}

.alert-dot {
  margin-right: 16rpx;
  font-size: 32rpx;
}

.alert-text {
  flex: 1;
  font-size: 28rpx;
  color: #2c3e50;
}

/* 加载遮罩 */
.loading-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.3);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
}

.loading-content {
  background: white;
  padding: 40rpx 60rpx;
  border-radius: 20rpx;
  font-size: 32rpx;
  color: #2c3e50;
}
