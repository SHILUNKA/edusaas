.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding: 20rpx 20rpx 180rpx;
}

/* 信息卡片 */
.info-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 20rpx;
  position: relative;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.06);
}

.status-badge {
  position: absolute;
  top: 24rpx;
  right: 24rpx;
  padding: 8rpx 20rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border-radius: 20rpx;
  font-size: 24rpx;
}

.contact-info {
  margin-bottom: 24rpx;
}

.name {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  display: block;
  margin-bottom: 12rpx;
}

.phone-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.phone {
  font-size: 28rpx;
  color: #666;
}

.call-btn {
  background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%);
  color: #fff;
  border: none;
  border-radius: 32rpx;
  padding: 8rpx 24rpx;
  font-size:24rpx;
}

.quality-score {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.stars {
  font-size: 32rpx;
  color: #FFD700;
  margin-left: 12rpx;
}

.detail-row {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
  line-height: 1.6;
}

.label {
  color: #999;
  margin-right: 12rpx;
}

.highlight {
  color: #F56C6C;
  font-weight: 600;
}

.notes {
  margin-top: 24rpx;
  padding-top: 24rpx;
  border-top: 1rpx solid #f0f0f0;
  font-size: 26rpx;
  color: #666;
  line-height: 1.8;
}

/* 跟进记录 */
.follow-up-section {
  background: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.06);
}

.section-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
}

/* 时间线 */
.timeline {
  position: relative;
  padding-left: 40rpx;
}

.timeline::before {
  content: '';
  position: absolute;
  left: 14rpx;
  top: 24rpx;
  bottom: 24rpx;
  width: 2rpx;
  background: linear-gradient(180deg, #667eea 0%, #764ba2 100%);
}

.timeline-item {
  position: relative;
  margin-bottom: 32rpx;
}

.timeline-item:last-child {
  margin-bottom: 0;
}

.timeline-dot {
  position: absolute;
  left: -34rpx;
  top: 8rpx;
  width: 16rpx;
  height: 16rpx;
  background: #667eea;
  border-radius: 50%;
  border: 3rpx solid #fff;
  box-shadow: 0 0 0 2rpx #667eea;
}

.timeline-content {
  background: #f8f8f8;
  border-radius: 12rpx;
  padding: 20rpx;
}

.item-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 12rpx;
}

.type-badge {
  padding: 6rpx 16rpx;
  background: linear-gradient(135deg, #fa709a 0%, #fee140 100%);
  color: #fff;
  border-radius: 16rpx;
  font-size: 22rpx;
}

.outcome {
  font-size: 32rpx;
}

.content {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
  margin-bottom: 12rpx;
}

.footer {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: #999;
}

.empty-timeline {
  text-align: center;
  padding: 80rpx 0;
  color: #999;
  font-size: 26rpx;
}

/* 添加按钮 */
.action-btn {
  position: fixed;
  right: 40rpx;
  bottom: 100rpx;
  width: 120rpx;
  height: 120rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 50%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #fff;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.4);
  font-size: 24rpx;
}

.action-btn .icon {
  font-size: 48rpx;
  margin-bottom: 4rpx;
}

.action-btn:active {
  opacity: 0.8;
  transform: scale(0.95);
}

/* 对话框 */
.dialog-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.dialog {
 width: 600rpx;
  background: #fff;
  border-radius: 20rpx;
  overflow: hidden;
}

.dialog-title {
  padding: 32rpx;
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  text-align: center;
  border-bottom: 1rpx solid #f0f0f0;
}

.dialog-content {
  padding: 32rpx;
  max-height: 800rpx;
  overflow-y: auto;
}

.form-item {
  margin-bottom: 24rpx;
}

.form-item .label {
  display: block;
  font-size: 26rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.picker,
.textarea {
  width: 100%;
  padding: 16rpx;
  background: #f8f8f8;
  border-radius: 8rpx;
  font-size: 26rpx;
  color: #333;
}

.textarea {
  min-height: 200rpx;
}

.dialog-actions {
  display: flex;
  border-top: 1rpx solid #f0f0f0;
}

.cancel-btn,
.confirm-btn {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 30rpx;
  border: none;
  border-radius: 0;
}

.cancel-btn {
  background: #f5f5f5;
  color: #666;
}

.confirm-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
}

/* 加载中 */
.loading {
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 100vh;
  font-size: 28rpx;
  color: #999;
}
