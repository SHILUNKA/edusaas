.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: #f5f5f5;
}

/* 顶部Tab */
.tabs {
  display: flex;
  background: #fff;
  padding: 10rpx 0;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.tab-item.active {
  color: #5D5FEF;
  font-weight: 600;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background: #5D5FEF;
  border-radius: 4rpx;
}

/* 线索列表 */
.lead-list {
  flex: 1;
  padding: 20rpx;
}

.lead-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  position: relative;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.06);
}

.lead-card:active {
  opacity: 0.8;
}

/* 状态标签 */
.status-badge {
  position: absolute;
  top: 24rpx;
  right: 24rpx;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  color: #fff;
}

.status-new {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.status-contacted {
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
}

.status-qualified {
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
}

.status-trial {
  background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%);
}

.status-converted {
  background: linear-gradient(135deg, #fa709a 0%, #fee140 100%);
}

.status-lost {
  background: #999;
}

/* 主要信息 */
.lead-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.contact-info {
  flex: 1;
  padding-right: 120rpx;
}

.contact-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}

.phone {
  font-size: 26rpx;
  color: #666;
}

.quality-score {
  font-size: 28rpx;
  color: #FFD700;
}

/* 孩子信息 */
.child-info,
.source {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.label {
  color: #999;
  margin-right: 8rpx;
}

.age {
  color: #999;
  margin-left: 8rpx;
}

/* 底部信息 */
.lead-footer {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 20rpx;
  padding-top: 16rpx;
  border-top: 1rpx solid #f0f0f0;
  font-size: 24rpx;
  color: #999;
}

.assigned,
.next-follow-up {
  display: flex;
  align-items: center;
}

.icon {
  margin-right: 6rpx;
  font-size: 22rpx;
}

.next-follow-up {
  color: #F56C6C;
}

/* 加载状态 */
.load-more,
.no-more {
  text-align: center;
  padding: 40rpx;
  font-size: 26rpx;
  color: #999;
}

/* 空状态 */
.empty {
  text-align: center;
  padding: 200rpx 0;
}

.empty image {
  width: 300rpx;
  height: 300rpx;
  margin-bottom: 40rpx;
}

.empty text {
  display: block;
  font-size: 28rpx;
  color: #999;
}

/* 创建按钮 */
.create-btn {
  position: fixed;
  right: 40rpx;
  bottom: 100rpx;
  width: 120rpx;
  height: 120rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 50%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #fff;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.4);
  font-size: 24rpx;
}

.create-btn .icon {
  font-size: 48rpx;
  margin-bottom: 4rpx;
}

.create-btn:active {
  opacity: 0.8;
  transform: scale(0.95);
}
