<view class="container">
  <view class="form-card">
      <view class="form-group">
        <view class="label">标题 <text class="required">*</text></view>
        <input class="input" placeholder="请输入通知标题" bindinput="onInput" data-field="title" value="{{title}}" />
      </view>

      <view class="divider"></view>

      <view class="form-group">
        <view class="label">优先级</view>
        <view class="priority-options">
            <view class="p-option {{priority === 'normal' ? 'active normal' : ''}}" bindtap="setPriority" data-val="normal">
                <text class="dot"></text> 普通消息
            </view>
            <view class="p-option {{priority === 'high' ? 'active high' : ''}}" bindtap="setPriority" data-val="high">
                <text class="dot"></text> 重要通知
            </view>
        </view>
      </view>

      <view class="divider"></view>

      <view class="form-group">
        <view class="label">内容详情 <text class="required">*</text></view>
        <textarea class="textarea" placeholder="请输入通知正文..." bindinput="onInput" data-field="content" value="{{content}}" maxlength="500"></textarea>
        <view class="count">{{content.length}}/500</view>
      </view>

      <!-- 预留：上传附件或图片区域 -->
      <!-- <view class="upload-area">...</view> -->
  </view>

  <view class="btn-area">
    <button class="submit-btn" bindtap="onSubmit" loading="{{loading}}" disabled="{{loading}}">立即发布</button>
  </view>
</view>
