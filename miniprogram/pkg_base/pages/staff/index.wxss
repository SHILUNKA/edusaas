
.container {
  min-height: 100vh;
  background-color: #f8fafc;
  padding-bottom: 40rpx;
}

.search-bar {
  background: #fff;
  padding: 20rpx 30rpx;
  position: sticky;
  top: 0;
  z-index: 10;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.03);
}

.search-wrap {
  background: #f1f5f9;
  border-radius: 36rpx;
  height: 72rpx;
  display: flex;
  align-items: center;
  padding: 0 24rpx;
}

.search-icon {
  margin-right: 12rpx;
  font-size: 32rpx;
  opacity: 0.5;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: #334155;
}

.ph-color {
  color: #94a3b8;
}

.staff-list {
  padding: 24rpx 30rpx;
}

.staff-card {
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 24rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.03);
}

.avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background: #f1f5f9;
  margin-right: 24rpx;
}

.info {
  flex: 1;
}

.header {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
}

.name {
  font-size: 32rpx;
  font-weight: 600;
  color: #1e293b;
  margin-right: 16rpx;
}

.badge {
  font-size: 20rpx;
  padding: 2rpx 10rpx;
  border-radius: 6rpx;
  background: #e0f2fe;
  color: #0284c7;
  border: 1rpx solid #bae6fd;
}

.badge.admin {
  background: #f3e8ff;
  color: #9333ea;
  border-color: #e9d5ff;
}

.sub-info {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #64748b;
  margin-bottom: 6rpx;
}

.status {
    margin-right: 10rpx;
}
.status.active { color: #16a34a; }
.status.inactive { color: #cbd5e1; }

.divider {
  margin: 0 10rpx;
  color: #cbd5e1;
}

.email {
    font-size: 22rpx;
    color: #94a3b8;
}

.action {
  margin-left: 20rpx;
}

.icon-btn {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: #f0fdf4;
  color: #16a34a;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  border: 1rpx solid #dcfce7;
}

.icon-btn:active {
  background: #dcfce7;
}

.fab-btn {
  position: fixed;
  right: 40rpx;
  bottom: 60rpx;
  width: 110rpx;
  height: 110rpx;
  background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
  border-radius: 50%;
  box-shadow: 0 8rpx 20rpx rgba(37, 99, 235, 0.4);
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 60rpx;
  z-index: 100;
}

.fab-btn:active {
    transform: scale(0.95);
}

.empty-state {
  text-align: center;
  padding: 100rpx 0;
  color: #94a3b8;
  font-size: 28rpx;
}
