/* 页面容器 */
.workspace-container {
  min-height: 100vh;
  background-color: #f8fafc;
  position: relative;
}

.custom-header-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 300rpx;
  background: linear-gradient(135deg, #1e293b 0%, #334155 100%);
  z-index: 0;
  border-bottom-left-radius: 40rpx;
  border-bottom-right-radius: 40rpx;
}

.content-wrapper {
  position: relative;
  z-index: 1;
  padding: 100rpx 30rpx 40rpx;
}

/* 头部 */
.header-section {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
  color: white;
}

.header-section .title {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.header-section .subtitle {
  font-size: 24rpx;
  opacity: 0.8;
  letter-spacing: 2rpx;
}

.user-avatar {
  width: 80rpx;
  height: 80rpx;
  background: rgba(255,255,255,0.2);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  backdrop-filter: blur(8px);
}

/* 标题栏 */
.section-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #334155;
  margin-bottom: 24rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.section-title.warning-title {
  margin-top: 40rpx;
}

.status-tag {
  font-size: 22rpx;
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
}

.status-tag.success {
  background: #dcfce7;
  color: #16a34a;
}

.status-tag.danger {
  background: #fee2e2;
  color: #ef4444;
}

/* 审批卡片 grid */
.approval-cards {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  margin-bottom: 40rpx;
}

.approval-item {
  width: 48%;
  background: white;
  padding: 30rpx;
  border-radius: 20rpx;
  margin-bottom: 24rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.03);
  box-sizing: border-box;
}

.icon-circle {
  width: 80rpx;
  height: 80rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  margin-right: 20rpx;
}

.icon-circle.blue { background: #e0f2fe; color: #0284c7; }
.icon-circle.red { background: #fee2e2; color: #ef4444; }
.icon-circle.orange { background: #ffedd5; color: #ea580c; }
.icon-circle.purple { background: #f3e8ff; color: #9333ea; }

.info {
  display: flex;
  flex-direction: column;
}

.info .count {
  font-size: 36rpx;
  font-weight: bold;
  color: #0f172a;
  line-height: 1.2;
}

.info .label {
  font-size: 22rpx;
  color: #64748b;
  margin-top: 4rpx;
}

/* 风险列表 */
.risk-list {
  background: white;
  border-radius: 20rpx;
  padding: 0 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.03);
}

.risk-item {
  display: flex;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 2rpx solid #f1f5f9;
}

.risk-item:last-child {
  border-bottom: none;
}

.risk-icon {
  font-size: 36rpx;
  margin-right: 20rpx;
}

.risk-content {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.risk-text {
  font-size: 28rpx;
  color: #0f172a;
  font-weight: 500;
}

.risk-desc {
  font-size: 24rpx;
  color: #ef4444;
  margin-top: 4rpx;
}

.handle-btn {
  margin: 0 !important;
  font-size: 24rpx;
  background: white;
  border: 2rpx solid #e2e8f0;
  color: #64748b;
}

.empty-state {
  background: white;
  border-radius: 20rpx;
  padding: 40rpx;
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.03);
}

.empty-icon {
  font-size: 60rpx;
  margin-bottom: 16rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #16a34a;
}

/* 工具Grid */
.tools-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
  background: white;
  padding: 40rpx 20rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.03);
}

.tool-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.tool-icon {
  width: 90rpx;
  height: 90rpx;
  border-radius: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  margin-bottom: 16rpx;
}

.tool-name {
  font-size: 24rpx;
  color: #475569;
}