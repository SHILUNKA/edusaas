/* pkg_customer/pages/honor/badges/index.wxss */
.badges-container {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 40rpx;
}

/* 统计头部 */
.stats-header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 50rpx 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
}

.stats-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stats-value {
  font-size: 60rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.stats-label {
  font-size: 26rpx;
  opacity: 0.9;
}

.stats-divider {
  width: 2rpx;
  height: 80rpx;
  background: rgba(255, 255, 255, 0.3);
  margin: 0 80rpx;
}

/* 勋章网格 */
.badges-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  padding: 30rpx;
}

.badge-item {
  background: white;
  border-radius: 16rpx;
  padding: 40rpx 30rpx;
  text-align: center;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  transition: transform 0.2s;
}

.badge-item.locked {
  opacity: 0.5;
  filter: grayscale(1);
}

.badge-item.unlocked {
  position: relative;
  overflow: hidden;
}

.badge-item.unlocked::before {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: linear-gradient(45deg, transparent, rgba(255, 215, 0, 0.1), transparent);
  animation: shine 3s infinite;
}

@keyframes shine {
  0% {
    transform: translateX(-100%) translateY(-100%) rotate(45deg);
  }
  100% {
    transform: translateX(100%) translateY(100%) rotate(45deg);
  }
}

.badge-item:active {
  transform: scale(0.95);
}

.badge-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.badge-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.badge-date {
  font-size: 22rpx;
  color: #999;
}

.badge-progress {
  margin-top: 20rpx;
}

.progress-bar {
  height: 8rpx;
  background: #eee;
  border-radius: 4rpx;
  overflow: hidden;
  margin-bottom: 10rpx;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #667eea, #764ba2);
  border-radius: 4rpx;
  transition: width 0.3s;
}

.progress-text {
  font-size: 22rpx;
  color: #999;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 150rpx 0;
}

.empty-icon {
  font-size: 100rpx;
  display: block;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}
