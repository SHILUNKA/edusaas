/* pkg_customer/pages/honor/index.wxss */
.honor-container {
  min-height: 100vh;
  background: linear-gradient(180deg, #667eea 0%, #764ba2 50%, #f5f5f5 50%);
  padding-bottom: 120rpx;
}

/* 军衔徽章展示 */
.rank-display {
  padding: 60rpx 30rpx;
  text-align: center;
  color: white;
}

.rank-badge {
  width: 200rpx;
  height: 200rpx;
  margin: 0 auto 30rpx;
  position: relative;
  animation: float 3s ease-in-out infinite;
}

@keyframes float {
  0%, 100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-10rpx);
  }
}

.badge-icon {
  width: 100%;
  height: 100%;
  filter: drop-shadow(0 8rpx 20rpx rgba(0, 0, 0, 0.3));
}

.rank-name {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.rank-level {
  font-size: 28rpx;
  opacity: 0.9;
  margin-bottom: 40rpx;
}

/* 积分进度条 */
.points-progress {
  margin-top: 40rpx;
  padding: 0 40rpx;
}

.progress-bar {
  height: 16rpx;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 8rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #FFD700, #FFA500);
  border-radius: 8rpx;
  transition: width 0.5s ease;
}

.progress-text {
  display: flex;
  justify-content: space-between;
  margin-top: 16rpx;
  font-size: 24rpx;
}

/* 统计卡片 */
.stats-cards {
  display: flex;
  justify-content: space-around;
  margin: 30rpx;
  padding: 30rpx;
  background: white;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.stat-card {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-value {
  font-size: 40rpx;
  font-weight: bold;
  color: #667eea;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #999;
}

/* 功能Tab */
.function-tabs {
  display: flex;
  margin: 30rpx;
  background: white;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.tab-item {
  flex: 1;
  padding: 30rpx;
  text-align: center;
  font-size: 28rpx;
  color: #666;
  border-right: 1rpx solid #eee;
  transition: all 0.3s;
}

.tab-item:last-child {
  border-right: none;
}

.tab-item.active {
  background: #667eea;
  color: white;
  font-weight: bold;
}

.hint-text {
  text-align: center;
  padding: 30rpx;
  color: #999;
  font-size: 26rpx;
}

.report-entry {
  margin-top: 40rpx;
  padding: 0 40rpx;
}

.report-btn {
  background: rgba(255, 255, 255, 0.15);
  backdrop-filter: blur(10px);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 40rpx;
  padding: 20rpx 40rpx;
  display: inline-flex;
  align-items: center;
  gap: 12rpx;
  font-size: 26rpx;
  color: white;
  transition: all 0.3s ease;
}

.report-btn:active {
  transform: scale(0.95);
  background: rgba(255, 255, 255, 0.25);
}

.report-btn .iconfont {
  font-size: 32rpx;
}
