<view class="messages-container">
  <scroll-view scroll-y class="message-list" wx:if="{{messages.length > 0}}">
    <view 
      class="message-card" 
      wx:for="{{messages}}" 
      wx:key="id"
      bindtap="onMessageTap"
      data-id="{{item.id}}"
    >
      <view class="card-header">
        <view class="title-row">
          <view class="priority-dot priority-{{item.priority}}"></view>
          <text class="title">{{item.title}}</text>
        </view>
        <text class="date">{{item.created_at}}</text>
      </view>
      <view class="card-body">
        <text class="content-preview">{{item.content}}</text>
      </view>
      <view class="card-footer">
        <text class="more">查看详情 ></text>
      </view>
    </view>
  </scroll-view>

  <view class="empty-state" wx:elif="{{!loading}}">
    <image class="empty-icon" src="/images/empty-messages.png" />
    <text class="empty-text">暂时没有新消息</text>
  </view>
</view>
