/* pkg_customer/pages/schedule/detail/index.wxss */
.detail-container {
  min-height: 100vh;
  background: #f5f5f5;
  padding: 30rpx;
}

.class-card {
  background: white;
  border-radius: 16rpx;
  padding: 40rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.course-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
}

.info-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.info-row:last-child {
  border-bottom: none;
}

.info-row .label {
  font-size: 28rpx;
  color: #666;
}

.info-row .value {
  font-size: 28rpx;
  color: #333;
}

.section-card {
  background: white;
  border-radius: 16rpx;
  padding: 40rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.status-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
}

.status-row .label {
  font-size: 28rpx;
  color: #666;
}

.status-badge {
  padding: 10rpx 24rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: white;
}

.status-badge.signed_in {
  background: #4CAF50;
}

.rating {
  margin-bottom: 20rpx;
}

.star {
  font-size: 40rpx;
  margin-right: 10rpx;
}

.feedback-text {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
  padding: 20rpx;
  background: #f9f9f9;
  border-radius: 12rpx;
}

.loading-state {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
}
