.shop-container {
  min-height: 100vh;
  background-color: #f7f8fa;
}

.shop-header {
  position: relative;
  height: 300rpx;
  background-color: #4A90E2;
}

.banner {
  width: 100%;
  height: 100%;
}

.slogan {
  position: absolute;
  bottom: 40rpx;
  left: 30rpx;
  color: #fff;
  font-size: 36rpx;
  font-weight: bold;
  text-shadow: 0 4rpx 8rpx rgba(0,0,0,0.3);
}

.product-list {
  padding: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
  color: #333;
}

.product-card {
  display: flex;
  background: linear-gradient(135deg, #fff 0%, #f9fbfd 100%);
  border-radius: 20rpx;
  padding: 40rpx 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 20rpx rgba(0,0,0,0.05);
  border: 1rpx solid rgba(74, 144, 226, 0.1);
}

.card-left {
  flex: 1;
}

.tier-name {
  display: block;
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
}

.tier-desc {
  display: block;
  font-size: 24rpx;
  color: #999;
  margin-bottom: 20rpx;
}

.tags {
  display: flex;
}

.tag {
  background: rgba(74, 144, 226, 0.1);
  color: #4A90E2;
  font-size: 22rpx;
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
}

.card-right {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  justify-content: space-between;
  min-width: 180rpx;
}

.price-box {
  color: #f44336;
  margin-bottom: 20rpx;
}

.symbol {
  font-size: 24rpx;
}

.price {
  font-size: 48rpx;
  font-weight: bold;
}

.btn-buy {
  background: #4A90E2 !important;
  color: #fff !important;
  border-radius: 30rpx !important;
  font-size: 24rpx !important;
  padding: 0 30rpx !important;
  margin: 0 !important;
}

.empty-state {
  text-align: center;
  padding-top: 100rpx;
  color: #999;
}
