/* pages/audit/index.wxss */
.page {
  min-height: 100vh;
  background-color: #f5f7fa;
  padding-top: 100rpx; /* Space for fixed tabs */
}

.tabs {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 88rpx;
  background: white;
  display: flex;
  justify-content: space-around;
  align-items: center;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
  z-index: 10;
}

.tab-item {
  font-size: 28rpx;
  color: #64748b;
  height: 88rpx;
  line-height: 88rpx;
  position: relative;
}

.tab-item.active {
  color: #4f46e5;
  font-weight: 600;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 20%;
  right: 20%;
  height: 4rpx;
  background: #4f46e5;
  border-radius: 4rpx;
}

.list-container {
  padding: 24rpx;
}

.audit-card {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.02);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f1f5f9;
}

.card-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #1e293b;
}

.card-time {
  font-size: 24rpx;
  color: #94a3b8;
}

.info-row {
  display: flex;
  margin-bottom: 16rpx;
  font-size: 28rpx;
}

.info-label {
  color: #64748b;
  width: 140rpx;
  flex-shrink: 0;
}

.info-val {
  color: #334155;
  flex: 1;
}

.info-val.price {
  color: #ef4444;
  font-weight: 600;
}

.proof-area {
  margin-top: 20rpx;
  padding: 16rpx;
  background: #f8fafc;
  border-radius: 8rpx;
  border: 1rpx dashed #cbd5e1;
  text-align: center;
}
.proof-btn {
  font-size: 26rpx;
  color: #3b82f6;
}

.card-footer {
  margin-top: 30rpx;
  display: flex;
  gap: 20rpx;
}

.btn {
  flex: 1;
  font-size: 28rpx;
  height: 72rpx;
  line-height: 72rpx;
  border-radius: 36rpx;
}

.btn-reject {
  background: #fee2e2;
  color: #b91c1c;
}

.btn-approve {
  background: #dcfce7;
  color: #15803d;
}

.empty-state {
  text-align: center;
  padding-top: 200rpx;
  color: #cbd5e1;
  font-size: 28rpx;
}
