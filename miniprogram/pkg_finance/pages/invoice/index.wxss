/* pages/invoice/index.wxss */
.page {
  min-height: 100vh;
  background-color: #f5f7fa;
  padding-top: 100rpx;
}

.tabs {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 88rpx;
  background: white;
  display: flex;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
  z-index: 10;
}
.tab-item {
  flex: 1;
  text-align: center;
  line-height: 88rpx;
  color: #64748b;
  font-size: 28rpx;
  position: relative;
}
.tab-item.active {
  color: #4f46e5;
  font-weight: 600;
}
.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 30%;
  right: 30%;
  height: 4rpx;
  background: #4f46e5;
  border-radius: 4rpx;
}

.list-container {
  padding: 24rpx;
}

.order-card {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 24rpx;
}

.card-header {
  display: flex;
  justify-content: space-between;
  border-bottom: 1rpx solid #f1f5f9;
  padding-bottom: 20rpx;
  margin-bottom: 20rpx;
}
.order-no {
  font-size: 28rpx;
  color: #334155;
  font-weight: 500;
}
.pay-status {
  font-size: 24rpx;
}
.pay-status.paid { color: #16a34a; }
.pay-status.partial { color: #ea580c; }
.pay-status.unpaid { color: #94a3b8; }

.info-row {
  display: flex;
  margin-bottom: 12rpx;
  font-size: 28rpx;
}
.label {
  color: #64748b;
  width: 140rpx;
}
.val { color: #1e293b; flex: 1; }
.val.price { font-weight: bold; color: #0f172a; }

.card-footer {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 1rpx dashed #f1f5f9;
  gap: 20rpx;
}

.btn-issue {
  background: #4f46e5;
  color: white;
  font-size: 26rpx;
  padding: 10rpx 30rpx;
  border-radius: 30rpx;
}
.issued-tag {
  color: #16a34a;
  background: #dcfce7;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  font-size: 22rpx;
}
.btn-view {
  color: #3b82f6;
  font-size: 26rpx;
  background: #eff6ff;
  border-radius: 30rpx;
}

.empty-state {
  text-align: center;
  color: #cbd5e1;
  padding-top: 200rpx;
}

/* Modal */
.modal-mask {
  position: fixed;
  inset: 0;
  background: rgba(0,0,0,0.5);
  z-index: 100;
}
.modal-box {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  border-radius: 24rpx 24rpx 0 0;
  z-index: 101;
  padding: 30rpx;
  padding-bottom: calc(30rpx + env(safe-area-inset-bottom));
}
.modal-header {
  font-size: 32rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 30rpx;
}
.input-group {
  margin-bottom: 30rpx;
}
.input-label {
  font-size: 28rpx;
  color: #334155;
  margin-bottom: 16rpx;
}
.input-control {
  background: #f8fafc;
  height: 80rpx;
  padding: 0 20rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
}
.upload-trigger {
  width: 160rpx;
  height: 160rpx;
  background: #f8fafc;
  border: 2rpx dashed #cbd5e1;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.placeholder {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #94a3b8;
}
.placeholder .plus {
  font-size: 48rpx;
  line-height: 1;
}
.preview {
  width: 100%;
  height: 100%;
}
.modal-btns {
  display: flex;
  gap: 20rpx;
  margin-top: 40rpx;
}
.btn-cancel {
  flex: 1;
  background: #f1f5f9;
  color: #334155;
  border-radius: 40rpx;
}
.btn-confirm {
  flex: 1;
  background: #4f46e5;
  color: white;
  border-radius: 40rpx;
}
