/* pkg_hq/dashboard/index.wxss */
page {
  background-color: #F8F9FB; /* Light grey background */
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif;
  padding: 24rpx;
  box-sizing: border-box;
}

.dashboard-container {
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

/* 0. App Header */
.app-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx 8rpx 20rpx 8rpx;
}

.brand-logo-text {
  font-size: 36rpx;
  font-weight: 800;
  color: #1D1D1F;
  letter-spacing: 0.5px;
}

/* 1. Chart Card */
.chart-card {
  background: #FFFFFF;
  border-radius: 32rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.03);
  position: relative;
  min-height: 500rpx;
}

.chart-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 24rpx;
}

.chart-title-block {
  display: flex;
  flex-direction: column;
}

.chart-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #1D1D1F;
  margin-bottom: 8rpx;
}

.chart-subtitle {
  font-size: 24rpx;
  color: #8E8E93;
}

.trend-badge {
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
  font-size: 24rpx;
  font-weight: 600;
}

.trend-badge.up {
  background-color: #E6F9EF;
  color: #34C759;
}

.trend-badge.down {
  background-color: #FFF0F0;
  color: #FF3B30;
}

.canvas-container {
  width: 100%;
  height: 320rpx;
  margin-top: 20rpx;
}

.revenue-chart {
  width: 100%;
  height: 100%;
}

/* Floating Today Button */
.today-float-btn {
  position: absolute;
  right: 32rpx;
  bottom: 32rpx;
  background: linear-gradient(135deg, #6C5DD3, #8774E8); /* Purple Gradient */
  border-radius: 20rpx;
  padding: 16rpx 32rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 8rpx 20rpx rgba(108, 93, 211, 0.3);
}

.today-label {
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-bottom: 4rpx;
}

.today-value {
  font-size: 36rpx;
  font-weight: 700;
  color: #FFFFFF;
}

/* 2. Menu Grid */
.menu-grid-row {
  display: grid;
  grid-template-columns: 1fr 1fr; /* 2 columns on mobile */
  gap: 24rpx;
}

.feature-card {
  background: #FFFFFF;
  border-radius: 32rpx;
  padding: 32rpx;
  display: flex;
  flex-direction: column;
  position: relative;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.02);
  min-height: 240rpx;
  justify-content: space-between;
}

.card-header-row {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 24rpx;
}

.icon-sq {
  width: 88rpx;
  height: 88rpx;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.icon-sq.blue { background-color: #007AFF; }
.icon-sq.purple { background-color: #AF52DE; }
.icon-sq.orange { background-color: #FF9500; }
.icon-sq.green { background-color: #34C759; }

.custom-icon {
  width: 44rpx;
  height: 44rpx;
  background-repeat: no-repeat;
  background-position: center;
  background-size: contain;
}

