
.container {
  min-height: 100vh;
  background-color: #f5f7fa;
  box-sizing: border-box;
  padding-bottom: 120rpx; /* Space for FAB */
  padding-top: 100rpx; /* Space for Search Bar */
  position: relative;
}

.list-container {
  padding: 24rpx;
  box-sizing: border-box;
}

.search-bar {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  padding: 20rpx 24rpx;
  background-color: #f5f7fa;
  box-sizing: border-box;
  z-index: 10;
}

.search-input-wrap {
  background-color: #ffffff;
  border-radius: 36rpx;
  height: 72rpx;
  display: flex;
  align-items: center;
  padding: 0 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.02);
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  margin-left: 12rpx;
  color: #333;
}

/* Card Design Refine */
.base-card {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.04);
  position: relative;
  border: 1rpx solid rgba(0,0,0,0.02);
}

.base-card:active {
  background-color: #ffffff; /* Disable full card active state */
}

/* Top Row */
.card-top-row {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 24rpx;
}

.base-info-group {
  display: flex;
  align-items: flex-start;
  flex: 1;
}

.base-logo-circle {
  width: 88rpx;
  height: 88rpx;
  background-color: #F0F2FF;
  border-radius: 50%;
  color: #5D5FEF;
  font-weight: 800;
  font-size: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
  flex-shrink: 0;
}

.base-text-info {
  display: flex;
  flex-direction: column;
}

.base-name-row {
  margin-bottom: 8rpx;
}

.base-name {
  font-size: 32rpx;
  font-weight: 700;
  color: #111827;
  line-height: 1.4;
}

.base-address {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #6B7280;
}

