/* Actions */
.card-actions {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.action-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 64rpx;
  border-radius: 32rpx;
  transition: opacity 0.2s;
}

.action-btn:active {
  opacity: 0.7;
}

.action-btn.edit {
  width: 64rpx;
  background-color: #F3F4F6;
}

.action-btn.appoint {
  padding: 0 24rpx;
  background-color: #F0F2FF;
  color: #5D5FEF;
  font-size: 24rpx;
  font-weight: 600;
}

/* Divider */
.card-divider {
  height: 1rpx;
  background-color: #F3F4F6;
  margin: 0 -32rpx 24rpx -32rpx; /* Stretch to edges */
  width: calc(100% + 64rpx);
}

/* Bottom Row */
.card-bottom-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.tags-group {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.tag-code {
  background-color: #F3F4F6;
  color: #6B7280;
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  font-family: monospace;
  align-self: flex-start;
}

.tag-auth {
  background-color: #FFF7ED; /* Orange Light */
  color: #EA580C; /* Orange Dark */
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  align-self: flex-start;
  border: 1rpx solid #FFEDD5;
}

.status-badge {
  font-size: 24rpx;
  padding: 4rpx 16rpx;
  border-radius: 8rpx;
}

.status-active {
  background-color: #ECFDF5;
  color: #10B981;
}

.status-inactive {
  background-color: #FEF2F2;
  color: #EF4444;
}

/* Floating Action Button (Keep existing) */
.fab-btn {
  position: fixed;
  bottom: 60rpx;
  right: 40rpx;
  width: 110rpx;
  height: 110rpx;
  background-color: #4F46E5; /* Indigo */
  border-radius: 50%;
  box-shadow: 0 6rpx 16rpx rgba(79, 70, 229, 0.4);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 100;
}

.fab-icon {
  color: white;
  font-size: 60rpx;
  font-weight: 300;
  margin-top: -8rpx;
}
