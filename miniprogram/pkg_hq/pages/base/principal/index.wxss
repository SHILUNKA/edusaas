/* pages/base/principal/index.wxss */
.container {
  min-height: 100vh;
  background-color: #f5f7fa; /* Light grey bg */
  padding: 32rpx;
  display: flex;
  justify-content: center;
  align-items: flex-start;
  padding-top: 60rpx;
}

.p-card {
  width: 100%;
  background-color: #ffffff;
  border-radius: 24rpx;
  padding: 48rpx 40rpx;
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.06);
  box-sizing: border-box;
}

.header-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.title {
  font-size: 40rpx;
  font-weight: 700;
  color: #111;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 48rpx;
}

.highlight {
  color: #5D5FEF;
  font-weight: 600;
}

.form-body {
  margin-bottom: 60rpx;
}

.input-group {
  margin-bottom: 40rpx;
}

.label {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 16rpx;
}

.input-box {
  width: 100%;
  height: 88rpx;
  border: 1rpx solid #E5E7EB;
  border-radius: 16rpx;
  padding: 0 24rpx;
  box-sizing: border-box;
  font-size: 30rpx;
  color: #333;
}

.ph-style {
  color: #9CA3AF;
}

/* Password Row */
.pwd-row {
  display: flex;
  gap: 20rpx;
}

.pwd-box {
  flex: 1;
  height: 88rpx;
  border: 1rpx solid #E5E7EB;
  border-radius: 16rpx;
  padding: 0 24rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background-color: #F9FAFB;
}

.pwd-text {
  font-family: monospace;
  font-size: 32rpx;
  color: #333;
  letter-spacing: 2rpx;
}

.icon-refresh {
  font-size: 36rpx;
  color: #999;
  padding: 10rpx;
}

.btn-copy {
  width: 160rpx;
  height: 88rpx;
  border: 1rpx solid #E5E7EB;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #374151;
  background-color: #fff;
}

.icon-copy {
  margin-right: 8rpx;
  font-size: 32rpx;
}

/* Confirm Button */
.btn-black-confirm {
  width: 100% !important;
  height: 96rpx;
  background-color: #000000;
  color: #ffffff;
  border-radius: 48rpx;
  font-size: 32rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-black-confirm:active {
  opacity: 0.8;
}
