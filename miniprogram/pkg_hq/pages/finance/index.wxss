/* 
 * HQ Finance MiniProgram - Soft UI Evolution Design System
 * Soft pastel colors with improved shadows and modern accessibility
 * Colors: Soft Blue #87CEEB, Soft Pink #FFB6C1, Soft Green #90EE90, Lavender #A78BFA
 */

page {
  background: linear-gradient(135deg, #F8FAFC 0%, #F1F5F9 100%);
  min-height: 100vh;
  font-family: -apple-system, BlinkMacSystemFont, 'SF Pro Display', sans-serif;
}

.container {
  min-height: 100vh;
  padding: 32rpx;
  padding-bottom: 120rpx;
}

/* ==================== Soft UI Card System ==================== */
.cockpit-card,
.pulse-card,
.metric-block,
.ranking-section,
.audit-section,
.tool-card {
  background: #FFFFFF;
  border: 2rpx solid rgba(255, 255, 255, 0.6);
  transition: all 0.25s ease;
}

.cockpit-card {
  border-radius: 32rpx;
  padding: 40rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 12rpx 40rpx rgba(135, 206, 235, 0.18), 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.cockpit-card:active {
  transform: scale(1.01);
  box-shadow: 0 16rpx 50rpx rgba(135, 206, 235, 0.25), 0 6rpx 16rpx rgba(0, 0, 0, 0.08);
}

.cockpit-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
}

.cockpit-title {
  font-size: 40rpx;
  font-weight: 700;
  color: #334155;
  letter-spacing: -0.5rpx;
}

.date-badge {
  background: linear-gradient(135deg, #87CEEB 0%, #A78BFA 100%);
  color: #FFFFFF;
  font-size: 22rpx;
  font-weight: 600;
  padding: 12rpx 24rpx;
  border-radius: 16rpx;
  box-shadow: 0 6rpx 20rpx rgba(135, 206, 235, 0.3);
}

/* ==================== Soft Pastel Metrics ==================== */
.main-metrics {
  display: flex;
  gap: 20rpx;
  margin-bottom: 32rpx;
}

.metric-block {
  flex: 1;
  border-radius: 28rpx;
  padding: 32rpx;
  background: linear-gradient(135deg, rgba(135, 206, 235, 0.15) 0%, rgba(135, 206, 235, 0.05) 100%);
  box-shadow: 0 8rpx 24rpx rgba(135, 206, 235, 0.15), 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  backdrop-filter: blur(10rpx);
}

.metric-block:active {
  transform: scale(1.03);
  box-shadow: 0 12rpx 32rpx rgba(135,206, 235, 0.25);
}

.metric-block.warning {
  background: linear-gradient(135deg, rgba(255, 182, 193, 0.2) 0%, rgba(255, 182, 193, 0.08) 100%);
  box-shadow: 0 8rpx 24rpx rgba(255, 182, 193, 0.2), 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.label {
  font-size: 24rpx;
  color: #64748B;
  margin-bottom: 12rpx;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 1rpx;
}

.value-row {
  display: flex;
  align-items: baseline;
  margin-bottom: 8rpx;
}

.currency {
  font-size: 28rpx;
  color: #64748B;
  margin-right: 6rpx;
  font-weight: 500;
}

.amount-lg {
  font-size: 48rpx;
  font-weight: 700;
  color: #334155;
  letter-spacing: -1rpx;
}

.trend-row {
  font-size: 22rpx;
  color: #FF6B9D;
  font-weight: 600;
}

.sub-metric {
  font-size: 22rpx;
  color: #94A3B8;
  font-weight: 500;
}

.metrics-divider {
  width: 2rpx;
  background: linear-gradient(180deg, transparent 0%, rgba(135, 206, 235, 0.3) 50%, transparent 100%);
}

/* ==================== Soft Chart Section ==================== */
.chart-section {
  margin-top: 32rpx;
  padding-top: 32rpx;
  border-top: 2rpx solid rgba(135, 206, 235, 0.2);
}

.chart-title {
  font-size: 28rpx;
  font-weight: 700;
  color: #334155;
  margin-bottom: 24rpx;
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.chart-title::before {
  content: '';
  width: 8rpx;
  height: 8rpx;
  background: linear-gradient(135deg, #87CEEB, #A78BFA);
  border-radius: 50%;
  box-shadow: 0 0 8rpx rgba(135, 206, 235, 0.4);
}

.trend-canvas {
  width: 100%;
  height: 240rpx;
  border-radius: 20rpx;
}

/* ==================== Section Titles ==================== */
.pulse-section,
.tools-section {
  margin-bottom: 32rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #334155;
  margin-bottom: 20rpx;
  letter-spacing: -0.5rpx;
}

/* ==================== Soft Pulse Cards ==================== */
.pulse-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
}

.pulse-card {
  border-radius: 28rpx;
  padding: 32rpx;
  background: linear-gradient(135deg, rgba(167, 139, 250, 0.15) 0%, rgba(167, 139, 250, 0.05) 100%);
  box-shadow: 0 8rpx 24rpx rgba(167, 139, 250, 0.15), 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  backdrop-filter: blur(10rpx);
}

.pulse-card:active {
  transform: scale(1.02);
  box-shadow: 0 12rpx 32rpx rgba(167, 139, 250, 0.25);
}

.p-label {
  font-size: 24rpx;
  color: #64748B;
  margin-bottom: 12rpx;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 1rpx;
}

.p-value {
  font-size: 44rpx;
  font-weight: 700;
  color: #334155;
  letter-spacing: -1rpx;
}

/* ==================== Soft Snapshot Button ==================== */
.snapshot-section {
  background: linear-gradient(135deg, rgba(144, 238, 144, 0.12) 0%, rgba(144, 238, 144, 0.05) 100%);
  border: 2rpx dashed rgba(144, 238, 144, 0.5);
  border-radius: 24rpx;
  padding: 40rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 6rpx 20rpx rgba(144, 238, 144, 0.12);
  transition: all 0.25s ease;
}

.snapshot-section:active {
  background: linear-gradient(135deg, rgba(144, 238, 144, 0.2) 0%, rgba(144, 238, 144, 0.08) 100%);
  border-color: rgba(144, 238, 144, 0.8);
  transform: scale(0.98);
  box-shadow: 0 10rpx 30rpx rgba(144, 238, 144, 0.2);
}

.snapshot-inner {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  font-size: 28rpx;
  font-weight: 700;
  color: #059669;
}

/* ==================== Soft Rankings ==================== */
.ranking-section {
  border-radius: 32rpx;
  padding: 40rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 12rpx 40rpx rgba(255, 182, 193, 0.15), 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.ranking-list {
  margin-top: 24rpx;
}

.ranking-item {
  display: flex;
  align-items: center;
  gap: 20rpx;
  padding: 28rpx 0;
  border-bottom: 2rpx solid rgba(135, 206, 235, 0.15);
  transition: all 0.25s ease;
}

.ranking-item:active {
  background: linear-gradient(90deg, rgba(135, 206, 235, 0.08) 0%, transparent 100%);
  transform: scale(1.01);
}

.ranking-item:last-child {
  border-bottom: none;
}

.rank-index {
  width: 56rpx;
  height: 56rpx;
  display: flex;
  align-items: center;
  justify-center;
  border-radius: 16rpx;
  font-size: 26rpx;
  font-weight: 900;
  background: rgba(135, 206, 235, 0.15);
  color: #64748B;
  box-shadow: 0 4rpx 12rpx rgba(135, 206, 235, 0.1);
}

.rank-1 {
  background: linear-gradient(135deg, #FCD34D 0%, #F59E0B 100%);
  color: #FFFFFF;
  box-shadow: 0 8rpx 24rpx rgba(252, 211, 77, 0.4);
}

.rank-2 {
  background: linear-gradient(135deg, #CBD5E1 0%, #94A3B8 100%);
  color: #FFFFFF;
  box-shadow: 0 6rpx 20rpx rgba(203, 213, 225, 0.4);
}

.rank-3 {
  background: linear-gradient(135deg, #FB923C 0%, #F97316 100%);
  color: #FFFFFF;
  box-shadow: 0 6rpx 20rpx rgba(251, 146, 60, 0.4);
}

.rank-info {
  flex: 1;
}

.rank-name {
  font-size: 28rpx;
  font-weight: 700;
  color: #334155;
  margin-bottom: 8rpx;
}

.rank-bar-bg {
  width: 100%;
  height: 10rpx;
  background: rgba(135, 206, 235, 0.15);
  border-radius: 5rpx;
  overflow: hidden;
}

.rank-bar-fill {
  height: 100%;
  background: linear-gradient(90deg, #87CEEB 0%, #A78BFA 100%);
  border-radius: 5rpx;
  transition: width 0.5s ease;
  box-shadow: 0 0 12rpx rgba(135, 206, 235, 0.4);
}

.rank-value {
  text-align: right;
  font-size: 30rpx;
  font-weight: 700;
  color: #334155;
}

.rank-sub {
  display: block;
  font-size: 20rpx;
  color: #94A3B8;
  font-weight: 500;
  margin-top: 4rpx;
}

/* ==================== Soft Tools ==================== */
.tool-card {
  border-radius: 28rpx;
  padding: 36rpx;
  display: flex;
  align-items: center;
  gap: 24rpx;
  background: linear-gradient(135deg, rgba(135, 206, 235, 0.1) 0%, rgba(167, 139, 250, 0.08) 100%);
  box-shadow: 0 8rpx 24rpx rgba(135, 206, 235, 0.12);
}

.tool-card:active {
  background: linear-gradient(135deg, rgba(135, 206, 235, 0.18) 0%, rgba(167, 139, 250, 0.12) 100%);
  transform: scale(0.98);
  box-shadow: 0 12rpx 32rpx rgba(135, 206, 235, 0.2);
}

.tool-icon {
  font-size: 60rpx;
  filter: drop-shadow(0 4rpx 12rpx rgba(135, 206, 235, 0.3));
}

.tool-body {
  flex: 1;
}

.tool-name {
  font-size: 30rpx;
  font-weight: 700;
  color: #334155;
  margin-bottom: 8rpx;
}

.tool-desc {
  font-size: 22rpx;
  color: #64748B;
  font-weight: 500;
}

.tool-action {
  font-size: 28rpx;
  font-weight: 700;
  background: linear-gradient(135deg, #FFB6C1, #FECACA);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

/* ==================== Soft Audit Section ==================== */
.audit-section {
  border-radius: 32rpx;
  padding: 40rpx;
  box-shadow: 0 12rpx 40rpx rgba(167, 139, 250, 0.12), 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.audit-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.more-link {
  font-size: 24rpx;
  color: #A78BFA;
  font-weight: 700;
}

.record-card {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx 0;
  border-bottom: 2rpx solid rgba(167, 139, 250, 0.12);
}

.record-card:last-child {
  border-bottom: none;
}

.card-left {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.record-type {
  width: 68rpx;
  height: 68rpx;
  border-radius: 20rpx;
  background: linear-gradient(135deg, rgba(135, 206, 235, 0.2) 0%, rgba(135, 206, 235, 0.1) 100%);
  border: none;
  color: #0EA5E9;
  font-size: 28rpx;
  font-weight: 800;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 16rpx rgba(135, 206, 235, 0.15);
}

.record-type.INCOME {
  background: linear-gradient(135deg, rgba(144, 238, 144, 0.25) 0%, rgba(144, 238, 144, 0.12) 100%);
  color: #059669;
  box-shadow: 0 4rpx 16rpx rgba(144, 238, 144, 0.2);
}

.record-detail {
  flex: 1;
}

.payer {
  font-size: 28rpx;
  font-weight: 700;
  color: #334155;
  margin-bottom: 6rpx;
}

.time {
  font-size: 22rpx;
  color: #94A3B8;
  font-weight: 500;
}

.card-right {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 12rpx;
}

.amount {
  font-size: 36rpx;
  font-weight: 900;
}

.amount.INCOME {
  color: #059669;
  text-shadow: 0 2rpx 8rpx rgba(5, 150, 105, 0.15);
}

.amount.EXPENSE {
  color: #EF4444;
  text-shadow: 0 2rpx 8rpx rgba(239, 68, 68, 0.15);
}

.btn-verify {
  margin: 0 !important;
  padding: 0 32rpx !important;
  height: 60rpx !important;
  line-height: 60rpx !important;
  font-size: 24rpx !important;
  font-weight: 700 !important;
  background: linear-gradient(135deg, #A78BFA 0%, #C4B5FD 100%) !important;
  color: #FFF !important;
  border-radius: 16rpx !important;
  border: none !important;
  box-shadow: 0 8rpx 24rpx rgba(167, 139, 250, 0.3) !important;
}

.btn-verify::after {
  border: none !important;
}

.status-text,
.empty-text {
  font-size: 24rpx;
  color: #94A3B8;
  font-weight: 600;
}

.empty-state-card {
  text-align: center;
  padding: 60rpx 0;
}

/* Soft hover/active effects */
.cockpit-card:active,
.pulse-card:active,
.metric-block:active,
.tool-card:active {
  transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
}
