.container {
  min-height: 100vh;
  background-color: #f5f7fa;
  padding: 24rpx;
  box-sizing: border-box;
  padding-bottom: 60rpx;
}

/* 1. Cockpit Card (Dark Theme) */
.cockpit-card {
  background: linear-gradient(180deg, #1F2937 0%, #111827 100%);
  border-radius: 24rpx;
  padding: 32rpx;
  color: #fff;
  margin-bottom: 32rpx;
  box-shadow: 0 12rpx 32rpx rgba(17, 24, 39, 0.2);
}

.cockpit-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
}

.cockpit-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #F9FAFB;
}

.date-badge {
  font-size: 24rpx;
  background: rgba(255,255,255,0.1);
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
  color: #9CA3AF;
}

.main-metrics {
  display: flex;
  justify-content: space-between;
  align-items: stretch;
  margin-bottom: 40rpx;
}

.metric-block {
  flex: 1;
}

.metrics-divider {
  width: 1rpx;
  background: rgba(255,255,255,0.1);
  margin: 0 32rpx;
}

.label {
  font-size: 24rpx;
  color: #9CA3AF;
  margin-bottom: 12rpx;
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.value-row {
  display: flex;
  align-items: baseline;
  margin-bottom: 8rpx;
}

.currency {
  font-size: 28rpx;
  margin-right: 4rpx;
  color: #D1D5DB;
}

.amount-lg {
  font-size: 40rpx;
  font-weight: 700;
  font-family: 'DIN Alternate', sans-serif;
  letter-spacing: 1rpx;
}

.warning .amount-lg {
  color: #F87171; /* Red for liabilities */
}

.trend-row {
  font-size: 22rpx;
  color: #F87171;
}

.sub-metric {
  font-size: 22rpx;
  color: #6B7280;
}

/* Chart */
.chart-section {
  padding-top: 24rpx;
  border-top: 1rpx solid rgba(255,255,255,0.1);
}

.chart-title {
  font-size: 24rpx;
  color: #9CA3AF;
  margin-bottom: 16rpx;
}

.trend-canvas {
  width: 100%;
  height: 200rpx;
}

/* 2. Rankings Section */
.ranking-section {
  background: #fff;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: 700;
  color: #111;
  margin-bottom: 24rpx;
}

.ranking-item {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.ranking-item:last-child {
  margin-bottom: 0;
}

.rank-index {
  width: 40rpx;
  font-size: 32rpx;
  font-weight: 700;
  color: #9CA3AF;
  margin-right: 16rpx;
  text-align: center;
}

/* Top 3 colors */
.rank-1 { color: #F59E0B; }
.rank-2 { color: #6B7280; }
.rank-3 { color: #B45309; }

.rank-info {
  flex: 1;
  margin-right: 24rpx;
}

.rank-name {
  font-size: 28rpx;
  color: #374151;
  margin-bottom: 8rpx;
  font-weight: 500;
}

.rank-bar-bg {
  width: 100%;
  height: 8rpx;
  background: #F3F4F6;
  border-radius: 4rpx;
  overflow: hidden;
}

.rank-bar-fill {
  background: #5D5FEF;
  height: 100%;
  border-radius: 4rpx;
}

.rank-value {
  text-align: right;
  font-size: 28rpx;
  font-weight: 600;
  color: #111;
}

.rank-sub {
  display: block;
  font-size: 20rpx;
  color: #9CA3AF;
  font-weight: 400;
}

/* 3. Audit Section */
.audit-section {
  background: #fff;
  border-radius: 24rpx;
  padding: 32rpx;
}

.audit-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.more-link {
  font-size: 24rpx;
  color: #5D5FEF;
}

.record-card {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #F3F4F6;
}

.record-card:last-child {
  border-bottom: none;
}

.card-left {
  display: flex;
  align-items: center;
}

.record-type {
  width: 64rpx;
  height: 64rpx;
  border-radius: 16rpx;
  background: #F3F4F6;
  color: #6B7280;
  font-size: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
  font-weight: 600;
}

.record-type.INCOME {
  background: #ECFDF5;
  color: #059669;
}

.payer {
  font-size: 28rpx;
  color: #374151;
  font-weight: 500;
  margin-bottom: 4rpx;
}

.time {
  font-size: 22rpx;
  color: #9CA3AF;
}

.card-right {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.amount {
  font-size: 30rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.amount.INCOME { color: #059669; }
.amount.EXPENSE { color: #DC2626; }

.btn-verify {
  margin: 0 !important;
  font-size: 22rpx !important;
  padding: 0 24rpx !important;
  height: 48rpx !important;
  line-height: 48rpx !important;
  background: #111827 !important;
  color: #fff !important;
  border-radius: 24rpx !important;
}

.status-text {
  font-size: 22rpx;
  color: #9CA3AF;
}

.empty-state-card {
  text-align: center;
  color: #9CA3AF;
  font-size: 26rpx;
  padding: 32rpx 0;
}

.empty-text {
  text-align: center;
  color: #ccc;
  font-size: 24rpx;
  padding: 20rpx 0;
}
