.container {
  min-height: 100vh;
  background-color: #F6F7F9;
  padding: 24rpx;
  padding-bottom: 40rpx;
}

.report-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.title {
  font-size: 32rpx;
  font-weight: 700;
  color: #111;
}

.date-picker {
  font-size: 24rpx;
  color: #666;
  background: #fff;
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
}

.card {
  background: #fff;
  border-radius: 20rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
}

.card-title {
  font-size: 28rpx;
  font-weight: 600;
  margin-bottom: 24rpx;
  border-left: 6rpx solid #5D5FEF;
  padding-left: 16rpx;
}

/* Funnel */
.funnel-container {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.funnel-step {
  width: 80%;
  text-align: center;
  color: #fff;
  padding: 16rpx 0;
  border-radius: 8rpx;
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 16rpx;
}

.step-1 { background: #818CF8; width: 90%; }
.step-2 { background: #6366F1; width: 75%; }
.step-3 { background: #4F46E5; width: 60%; }

.step-label { font-size: 24rpx; opacity: 0.9; }
.step-val { font-size: 32rpx; font-weight: 700; }
.step-rate {
  position: absolute;
  right: -80rpx;
  color: #666;
  font-size: 22rpx;
}

.funnel-arrow {
  color: #ccc;
  font-size: 24rpx;
  margin: 4rpx 0;
}

/* Products */
.product-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.product-item:last-child {
  border-bottom: none;
}

.prod-idx {
  width: 40rpx;
  color: #999;
  font-weight: 600;
}

.prod-item:nth-child(1) .prod-idx { color: #F59E0B; }

.prod-info {
  flex: 1;
}

.prod-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 4rpx;
}

.prod-cat {
  font-size: 20rpx;
  padding: 2rpx 8rpx;
  border-radius: 4rpx;
  display: inline-block;
}

.tag-course { background: #E0E7FF; color: #4338CA; }
.tag-material { background: #DCFCE7; color: #166534; }

.prod-stat {
  text-align: right;
}

.stat-val {
  font-size: 28rpx;
  color: #333;
  font-weight: 600;
}

.stat-amt {
  font-size: 20rpx;
  color: #999;
}

/* Trend */
.trend-canvas {
  width: 100%;
  height: 300rpx;
}
