.container {
  min-height: 100vh;
  background-color: #F6F7F9;
  padding-bottom: 40rpx;
}

/* 1. Header */
.header-section {
  background: linear-gradient(135deg, #2C3E50 0%, #000000 100%);
  color: #fff;
  padding: 40rpx 32rpx 80rpx; /* Extra padding for overlap */
  display: flex;
  align-items: center;
}

.score-circle {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  border: 6rpx solid #34D399; /* Green ring */
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-right: 24rpx;
  background: rgba(255,255,255,0.1);
}

.score-val {
  font-size: 40rpx;
  font-weight: 700;
  line-height: 1;
}

.score-label {
  font-size: 16rpx;
  color: #D1D5DB;
}

.header-info {
  flex: 1;
}

.info-title {
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.info-desc {
  font-size: 24rpx;
  color: #9CA3AF;
}

/* 2. Risk Card */
.risk-card {
  margin: -40rpx 24rpx 24rpx; /* Overlap header */
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
}

.card-title {
  font-size: 28rpx;
  font-weight: 600;
  margin-bottom: 16rpx;
  display: flex;
  align-items: center;
}

.icon-warn {
  margin-right: 8rpx;
}

.alert-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #FEF2F2;
  border-radius: 8rpx;
  padding: 16rpx 24rpx;
  margin-bottom: 12rpx;
}

.alert-item:last-child {
  margin-bottom: 0;
}

.alert-text {
  font-size: 24rpx;
  color: #DC2626;
}

.btn-check {
  margin: 0 !important;
  font-size: 20rpx !important;
  background: #fff !important;
  color: #DC2626 !important;
  border: 1rpx solid #FECACA !important;
}

/* 3. Section Common */
.section-container {
  background: #fff;
  margin: 0 24rpx 24rpx;
  border-radius: 16rpx;
  padding: 24rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.title {
  font-size: 30rpx;
  font-weight: 600;
  color: #111;
}

.more {
  font-size: 24rpx;
  color: #999;
}

/* Key Personnel Scroll */
.personnel-scroll {
  white-space: nowrap;
  height: 220rpx;
}

.person-card {
  display: inline-block;
  width: 160rpx;
  text-align: center;
  margin-right: 24rpx;
  vertical-align: top;
}

.avatar {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  background: #F3F4F6;
  margin-bottom: 12rpx;
}

.name {
  display: block;
  font-size: 26rpx;
  color: #333;
  margin-bottom: 4rpx;
  font-weight: 500;
}

.role {
  display: inline-block;
  font-size: 18rpx;
  padding: 2rpx 8rpx;
  border-radius: 6rpx;
  margin-bottom: 4rpx;
}

.tag-admin { background: #E0E7FF; color: #4338CA; }
.tag-principal { background: #DCFCE7; color: #166534; }

.base-name {
  display: block;
  font-size: 20rpx;
  color: #999;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.add-card {
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 180rpx;
  vertical-align: top;
}

.add-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  border: 2rpx dashed #ccc;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  color: #999;
  margin-bottom: 12rpx;
}

.add-text {
  font-size: 24rpx;
  color: #666;
}

/* 4. Rankings */
.tab-header {
  display: flex;
  margin-bottom: 24rpx;
  border-bottom: 1rpx solid #F3F4F6;
}

.tab-item {
  margin-right: 40rpx;
  padding-bottom: 16rpx;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.tab-item.active {
  color: #111;
  font-weight: 600;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 32rpx;
  height: 4rpx;
  background: #111;
  border-radius: 2rpx;
}

.rank-row {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.rank-num {
  width: 40rpx;
  text-align: center;
  font-size: 28rpx;
  font-weight: 700;
  color: #999;
  margin-right: 16rpx;
}

.rank-1 { color: #F59E0B; }
.rank-2 { color: #6B7280; }
.rank-3 { color: #B45309; }

.rank-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: #eee;
  margin-right: 20rpx;
}

.rank-info {
  flex: 1;
}

.rank-name {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.rank-base {
  font-size: 22rpx;
  color: #999;
}

.rank-score {
  text-align: right;
}

.rank-score .score-val {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: #111;
}


.rank-icon-box {
  width: 80rpx;
  height: 80rpx;
  border-radius: 16rpx;
  background: #E0E7FF;
  color: #4338CA;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
  font-size: 40rpx;
}
