.container {
  min-height: 100vh;
  background-color: #f8fafc;
  padding-bottom: 40rpx;
}

/* Header Section */
.header-section {
  background: linear-gradient(135deg, #4f46e5 0%, #3730a3 100%);
  padding: 40rpx 30rpx 100rpx;
  border-radius: 0 0 40rpx 40rpx;
  color: white;
}

.user-info {
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
}

.avatar-wrap {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  overflow: hidden;
  margin-right: 24rpx;
}

.avatar {
  width: 100%;
  height: 100%;
}

.welcome {
  font-size: 34rpx;
  font-weight: 600;
  margin-bottom: 4rpx;
}

.quote {
  font-size: 24rpx;
  opacity: 0.8;
}

.stats-grid {
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
}

.stat-item {
  flex: 1;
  text-align: center;
}

.stat-item .num {
  font-size: 40rpx;
  font-weight: 700;
  margin-bottom: 8rpx;
}

.stat-item .label {
  font-size: 22rpx;
  opacity: 0.8;
}

/* Section Common */
.section {
  padding: 0 30rpx;
  margin-top: -60rpx;
}

.section-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding: 0 10rpx;
}

.section-title text:first-child {
  font-size: 30rpx;
  font-weight: 700;
  color: #1e293b;
}

.section-title .more {
  font-size: 24rpx;
  color: #64748b;
}

/* Class Card */
.class-card {
  background: white;
  border-radius: 24rpx;
  padding: 30rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 10rpx 20rpx rgba(0, 0, 0, 0.03);
  margin-bottom: 40rpx;
}

.class-time {
  display: flex;
  flex-direction: column;
  margin-right: 30rpx;
  padding-right: 30rpx;
  border-right: 2rpx solid #f1f5f9;
}

.class-time .time {
  font-size: 32rpx;
  font-weight: 700;
  color: #1e293b;
}

.tag {
  background: #fdf2f2;
  color: #ef4444;
  font-size: 20rpx;
  padding: 2rpx 10rpx;
  border-radius: 8rpx;
  text-align: center;
  margin-top: 4rpx;
  font-weight: 600;
}

.class-info {
  flex: 1;
}

.course-name {
  font-size: 30rpx;
  font-weight: 700;
  color: #1e293b;
  margin-bottom: 10rpx;
}

.room-info {
  font-size: 24rpx;
  color: #64748b;
  display: flex;
  align-items: center;
}

.divider {
  margin: 0 16rpx;
  color: #e2e8f0;
}

.checkin-btn {
  background: #4f46e5;
  color: white;
  font-size: 26rpx;
  padding: 12rpx 24rpx;
  border-radius: 30rpx;
  font-weight: 600;
}

/* Menu Section */
.menu-section {
  margin-top: 40rpx;
}

.menu-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.menu-item {
  width: calc(33.33% - 14rpx);
  background: white;
  padding: 30rpx 0;
  border-radius: 24rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.02);
}

.icon-wrap {
  width: 80rpx;
  height: 80rpx;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 16rpx;
  font-size: 40rpx;
}

.color-1 { background-color: #eff6ff; }
.color-2 { background-color: #fff7ed; }
.color-3 { background-color: #fef2f2; }
.color-4 { background-color: #f0fdf4; }
.color-5 { background-color: #f5f3ff; }
.color-6 { background-color: #f0f9ff; }

.menu-item text:last-child {
  font-size: 24rpx;
  color: #475569;
  font-weight: 500;
}

/* Promo Banner */
.promo-banner {
  margin: 40rpx 30rpx;
  background: linear-gradient(135deg, #0f172a 0%, #1e293b 100%);
  border-radius: 24rpx;
  padding: 30rpx 40rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: white;
}

.promo-title {
  font-size: 28rpx;
  font-weight: 700;
  margin-bottom: 4rpx;
}

.promo-sub {
  font-size: 20rpx;
  opacity: 0.7;
}

.promo-btn {
  background: white;
  color: #0f172a;
  font-size: 24rpx;
  padding: 10rpx 24rpx;
  border-radius: 30rpx;
  font-weight: 700;
}
